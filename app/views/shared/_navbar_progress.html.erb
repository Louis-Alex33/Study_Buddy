<% if user_signed_in? && current_user.progress %>
  <% progress = current_user.progress %>
  <% league_data = progress.league_data %>

  <div class="navbar-progress-widget" style="--league-color: <%= league_data[:color] %>">
    <div class="league-badge-mini">
      <div class="league-icon-mini">
        <i class="fas <%= league_data[:icon] %>"></i>
      </div>
      <div class="league-info-mini">
        <div class="league-name-mini"><%= progress.current_league %></div>
        <div class="xp-mini"><%= progress.xp %> XP</div>
      </div>
    </div>

    <div class="xp-bar-mini">
      <div class="xp-fill-mini" style="width: <%= progress.league_progress_percentage %>%"></div>
    </div>

    <div class="quick-stats-mini">
      <span class="stat-mini" title="Niveau">
        <i class="fas fa-trophy"></i>
        <span><%= progress.level %></span>
      </span>
      <span class="stat-mini" title="SÃ©rie">
        <i class="fas fa-fire"></i>
        <span><%= progress.streak_days %></span>
      </span>
    </div>
  </div>
<% end %>

<style>
.navbar-progress-widget {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 0.5rem 1rem;
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(59, 130, 246, 0.2);
  border-radius: 2rem;
  margin-right: 1rem;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.navbar-progress-widget::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, var(--league-color)10, transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.navbar-progress-widget:hover {
  border-color: var(--league-color);
  box-shadow: 0 0 20px var(--league-color)30;
  transform: translateY(-2px);
}

.navbar-progress-widget:hover::before {
  opacity: 1;
}

.league-badge-mini {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  position: relative;
  z-index: 1;
}

.league-icon-mini {
  font-size: 1.5rem;
  color: var(--league-color);
  filter: drop-shadow(0 0 12px var(--league-color))
          drop-shadow(0 0 20px var(--league-color));
  animation: float 3s ease-in-out infinite, miniGlow 2s ease-in-out infinite alternate;

  i {
    color: var(--league-color);
  }
}

@keyframes miniGlow {
  0% {
    filter: drop-shadow(0 0 8px var(--league-color))
            drop-shadow(0 0 15px var(--league-color));
  }
  100% {
    filter: drop-shadow(0 0 15px var(--league-color))
            drop-shadow(0 0 25px var(--league-color));
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-3px);
  }
}

.league-info-mini {
  display: flex;
  flex-direction: column;
  gap: 0.1rem;
}

.league-name-mini {
  font-size: 0.75rem;
  font-weight: 700;
  color: var(--league-color);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  line-height: 1;
}

.xp-mini {
  font-size: 0.7rem;
  color: #94a3b8;
  font-weight: 600;
  line-height: 1;
}

.xp-bar-mini {
  width: 80px;
  height: 6px;
  background: rgba(30, 41, 59, 0.8);
  border-radius: 3px;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.xp-fill-mini {
  height: 100%;
  background: linear-gradient(90deg, var(--league-color), var(--league-color)cc);
  border-radius: 3px;
  transition: width 0.5s ease;
  box-shadow: 0 0 10px var(--league-color)80;
  position: relative;
}

.xp-fill-mini::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  animation: shine 2s infinite;
}

@keyframes shine {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.quick-stats-mini {
  display: flex;
  gap: 0.75rem;
  align-items: center;
  position: relative;
  z-index: 1;
}

.stat-mini {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  font-size: 0.75rem;
  color: #94a3b8;
  font-weight: 600;
  transition: all 0.3s ease;
}

.stat-mini:hover {
  color: var(--league-color);
  transform: scale(1.1);
}

.stat-mini i {
  font-size: 0.85rem;
  color: var(--league-color);
}

.stat-mini:first-child i {
  color: #f59e0b;
}

.stat-mini:last-child i {
  color: #ef4444;
  animation: flicker 2s infinite;
}

@keyframes flicker {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

@media (max-width: 992px) {
  .navbar-progress-widget {
    display: none;
  }
}
</style>
