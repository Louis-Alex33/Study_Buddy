<% if user_signed_in? && current_user.progress %>
  <% progress = current_user.progress %>
  <% league_data = progress.league_data %>

  <div class="progress-widget" data-league="<%= progress.current_league.downcase %>">
    <!-- League Badge -->
    <div class="league-badge" style="--league-color: <%= league_data[:color] %>">
      <div class="league-icon"><%= league_data[:icon] %></div>
      <div class="league-info">
        <div class="league-name"><%= progress.current_league %></div>
        <div class="league-level">Niveau <%= progress.level %></div>
      </div>
    </div>

    <!-- XP Progress Bar -->
    <div class="xp-container">
      <div class="xp-header">
        <span class="xp-current"><%= progress.xp %> XP</span>
        <% unless progress.current_league == 'L√©gende' %>
          <span class="xp-next"><%= progress.xp_to_next_league %> XP pour <%= progress.next_league %></span>
        <% else %>
          <span class="xp-next">Max Level!</span>
        <% end %>
      </div>
      <div class="xp-bar-container">
        <div class="xp-bar" style="width: <%= progress.league_progress_percentage %>%; background: linear-gradient(90deg, <%= league_data[:color] %>, <%= league_data[:color] %>cc);"></div>
      </div>
      <div class="xp-percentage"><%= progress.league_progress_percentage %>%</div>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-item">
        <div class="stat-icon">üé¥</div>
        <div class="stat-value"><%= progress.total_flashcards_completed %></div>
        <div class="stat-label">Flashcards</div>
      </div>

      <div class="stat-item">
        <div class="stat-icon">üìù</div>
        <div class="stat-value"><%= progress.total_notes_created %></div>
        <div class="stat-label">Notes</div>
      </div>

      <div class="stat-item">
        <div class="stat-icon">üî•</div>
        <div class="stat-value"><%= progress.streak_days %></div>
        <div class="stat-label">S√©rie</div>
      </div>
    </div>

    <!-- All Leagues Preview -->
    <div class="leagues-preview">
      <div class="leagues-title">Toutes les ligues</div>
      <div class="leagues-track">
        <% UserProgress::LEAGUES.each do |league_name, data| %>
          <div class="league-tier <%= 'active' if league_name == progress.current_league %> <%= 'completed' if progress.xp >= data[:min_xp] %>"
               style="--tier-color: <%= data[:color] %>"
               title="<%= league_name %> (<%= data[:min_xp] %>+ XP)">
            <div class="tier-icon"><%= data[:icon] %></div>
            <div class="tier-name"><%= league_name %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<style>
.progress-widget {
  background: rgba(15, 23, 42, 0.9);
  backdrop-filter: blur(30px);
  border: 1px solid rgba(59, 130, 246, 0.2);
  border-radius: 1.5rem;
  padding: 2rem;
  margin-bottom: 2rem;
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4);
  position: relative;
  overflow: hidden;
  animation: slideInDown 0.6s ease-out;
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.progress-widget::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, var(--league-color, #3b82f6)10, transparent);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  to {
    left: 100%;
  }
}

.league-badge {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  padding: 1.5rem;
  background: rgba(var(--league-color, #3b82f6), 0.1);
  border-radius: 1rem;
  margin-bottom: 1.5rem;
  border: 2px solid var(--league-color, #3b82f6);
  position: relative;
  overflow: hidden;
}

.league-badge::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(from 0deg, transparent, var(--league-color, #3b82f6)20, transparent 30%);
  animation: rotate 4s linear infinite;
  opacity: 0.3;
}

.league-icon {
  font-size: 4rem;
  filter: drop-shadow(0 0 20px var(--league-color, #3b82f6));
  animation: float 3s ease-in-out infinite;
  position: relative;
  z-index: 1;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}

.league-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.league-name {
  font-size: 2rem;
  font-weight: 800;
  color: var(--league-color, #3b82f6);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  text-shadow: 0 0 20px var(--league-color, #3b82f6);
}

.league-level {
  font-size: 1.1rem;
  color: #94a3b8;
  font-weight: 500;
}

.xp-container {
  margin-bottom: 1.5rem;
}

.xp-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.xp-current {
  font-size: 1.25rem;
  font-weight: 700;
  color: #f1f5f9;
}

.xp-next {
  font-size: 0.9rem;
  color: #94a3b8;
}

.xp-bar-container {
  height: 12px;
  background: rgba(30, 41, 59, 0.8);
  border-radius: 10px;
  overflow: hidden;
  position: relative;
  box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
}

.xp-bar {
  height: 100%;
  border-radius: 10px;
  transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  box-shadow: 0 0 20px currentColor;
}

.xp-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: xpShine 2s infinite;
}

@keyframes xpShine {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.xp-percentage {
  text-align: right;
  margin-top: 0.5rem;
  font-size: 0.9rem;
  color: #64748b;
  font-weight: 600;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.stat-item {
  text-align: center;
  padding: 1.25rem;
  background: rgba(30, 41, 59, 0.6);
  border-radius: 1rem;
  border: 1px solid rgba(59, 130, 246, 0.1);
  transition: all 0.3s ease;
}

.stat-item:hover {
  transform: translateY(-5px);
  border-color: rgba(59, 130, 246, 0.3);
  box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
}

.stat-icon {
  font-size: 2rem;
  margin-bottom: 0.5rem;
  filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.5));
}

.stat-value {
  font-size: 1.75rem;
  font-weight: 800;
  color: #f1f5f9;
  margin-bottom: 0.25rem;
}

.stat-label {
  font-size: 0.85rem;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.leagues-preview {
  padding-top: 1.5rem;
  border-top: 1px solid rgba(59, 130, 246, 0.2);
}

.leagues-title {
  font-size: 0.9rem;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  margin-bottom: 1rem;
  font-weight: 600;
}

.leagues-track {
  display: flex;
  gap: 0.75rem;
  overflow-x: auto;
  padding: 0.5rem 0;
  scrollbar-width: thin;
  scrollbar-color: rgba(59, 130, 246, 0.5) rgba(30, 41, 59, 0.5);
}

.league-tier {
  min-width: 80px;
  text-align: center;
  padding: 1rem 0.75rem;
  background: rgba(30, 41, 59, 0.6);
  border-radius: 0.75rem;
  border: 2px solid rgba(100, 116, 139, 0.3);
  transition: all 0.3s ease;
  opacity: 0.5;
  position: relative;
}

.league-tier.completed {
  opacity: 0.8;
  border-color: var(--tier-color);
}

.league-tier.active {
  opacity: 1;
  border-color: var(--tier-color);
  background: radial-gradient(circle at center, var(--tier-color)15, rgba(30, 41, 59, 0.8));
  box-shadow: 0 0 30px var(--tier-color)40;
  transform: scale(1.1);
}

.league-tier.active::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, var(--tier-color), transparent);
  border-radius: 0.75rem;
  animation: pulse 2s infinite;
  z-index: -1;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.5;
  }
  50% {
    opacity: 1;
  }
}

.tier-icon {
  font-size: 1.5rem;
  margin-bottom: 0.25rem;
}

.tier-name {
  font-size: 0.7rem;
  color: #cbd5e1;
  font-weight: 600;
  white-space: nowrap;
}

.league-tier.active .tier-name {
  color: var(--tier-color);
}

@media (max-width: 768px) {
  .stats-grid {
    grid-template-columns: 1fr;
  }

  .league-badge {
    flex-direction: column;
    text-align: center;
  }

  .league-name {
    font-size: 1.5rem;
  }
}
</style>
